{
  "title": "Limits",
  "$schema": "limits.json",
  "type": "object",
  "format": "grid",
  "options": {
    "disable_collapse": true
  },
  "properties": {
    "rules": {
      "title": "Budgets",
      "type": "array",
      "format": "table",
      "uniqueItems": true,
      "options": {
        "disable_collapse": true,
        "infoText": "Limit the number of contacts that can sent to the client."
      },
      "items": {
        "title": "Budget",
        "$ref": "#/definitions/limit"
      }
    }
  },
  "definitions": {
    "limit": {
      "headerTemplate": "{{self.quantity}} {{self.scope}} {{self.value}}",
      "type": "object",
      "id": "cache",
      "options": {
        "collapsed": false,
        "disable_collapse": true,
        "disable_array_reorder": true
      },
      "properties": {
        "quantity": {
          "title": "Quantity",
          "type": "integer",
          "propertyOrder": 10,
          "default": 10000,
          "options": {
            "infoText": "The maximum number of acceptable contacts for this budget."
          }
        },
        "scope": {
          "title": "Scope",
          "propertyOrder": 20,
          "default": 1,
          "options": {
            "infoText": "How wide do you want this duplicate check to reach?"
          },
          "enumSource": [
            {
              "source": [
                {
                  "value": 1,
                  "title": "total contacts"
                },
                {
                  "value": 2,
                  "title": "contacts where the category is"
                },
                {
                  "value": 3,
                  "title": "contacts where the UTM Source is"
                }
              ],
              "title": "{{item.title}}",
              "value": "{{item.value}}"
            }
          ]
        },
        "value": {
          "title": "Value",
          "type": "string",
          "propertyOrder": 30,
          "options": {
            "infoText": "Only applicable if scope is not set to total."
          }
        },
        "duration": {
          "title": "Duration",
          "propertyOrder": 40,
          "type": "string",
          "format": "select",
          "options": {
            "infoText": "Specify how long this budget should last, before expiring and allowing the contact to go to other clients within the scope."
          },
          "default": "P30D",
          "enumSource": [
            {
              "source": [
                {
                  "value": "PT1I",
                  "title": "per minute"
                },
                {
                  "value": "PT10I",
                  "title": "per 10 minutes"
                },
                {
                  "value": "PT30I",
                  "title": "per 30 minutes"
                },
                {
                  "value": "PT1H",
                  "title": "per hour"
                },
                {
                  "value": "PT6H",
                  "title": "per 6 hours"
                },
                {
                  "value": "PT12H",
                  "title": "per 12 hours"
                },
                {
                  "value": "P1D",
                  "title": "per day"
                },
                {
                  "value": "P2D",
                  "title": "per 2 days"
                },
                {
                  "value": "P3D",
                  "title": "per 3 days"
                },
                {
                  "value": "P4D",
                  "title": "per 4 days"
                },
                {
                  "value": "P5D",
                  "title": "per 5 days"
                },
                {
                  "value": "P6D",
                  "title": "per 6 days"
                },
                {
                  "value": "P1W",
                  "title": "per Week"
                },
                {
                  "value": "P2W",
                  "title": "per 2 Weeks"
                },
                {
                  "value": "P3W",
                  "title": "per 3 Weeks"
                },
                {
                  "value": "P30D",
                  "title": "per 30 days"
                }
              ],
              "title": "{{item.title}}",
              "value": "{{item.value}}"
            }
          ]
        }
      }
    }
  }
}